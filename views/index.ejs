<%- include("partials/header.ejs") %>


<div class="col align-items-center">
  <div class="row justify-content-center row-cols-1 row-cols-md-3 mb-3 mt-3 text-center">
    <div class="card mb-4 rounded-3 shadow-sm">
      <div class="card-header py-3 text-bg-todo">
        <h4 class="my-0 fw-normal text-black">Lets See What We Have To Do Today!!</h4>
      </div>
      <div class="card-body">
        <!-- <img class="profile" src="images/cat.jpeg" alt="cat profile"> -->
        <% if(currentpage === "/personal") { %> 
          <!-- <img  class="profile" src="images/giphy.gif" alt="cat profile"/>    -->
          <img class="profilee" src="images/tna-dribbble-01.gif"/>
          <form action="/personal" method="POST">
            <% } else { %>
              <img class="profile"src="images/ef0936558e58d6bebf73fee2ae895fe3.gif"/>
            <form action="/work" method="POST">
            <% } %>
            <input class="form-control" type="text" name="newItem" placeholder="Add To-Do">
          </form>
          <ul class="list-unstyled mt-3 mb-4">
            <% if(locals.todo) { %> 
                <% todo.forEach(function(item) { %>
                  <li class="card card-body">
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                      <label class="form-check-label text-black strikethrough" for="flexCheckDefault">
                        <%= item %>
                      </label>
                    </div>
                  </li>    
                  <% }); %>
                  <% } %>
              </ul>
            </div>
          </div>
        </div>
        
      </div>
      <%- include("partials/footer.ejs") %>
      